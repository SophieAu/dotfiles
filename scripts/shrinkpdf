#!/bin/bash

# potentially shrink all pdfs that are passed as arguments
# actual shrinking is not guaranteed as the input files might already be fairly small


# do this for each file that was passed as an argument
for file in "$@" ; do
 echo "Shrinking $file"

 # rename the old file to make it clear which is the optimized one
 oldfile="${file%.*} (old).pdf"
 mv "$file" "$oldfile"

 # optimize the file
 gs -dBATCH -dNOPAUSE -q -sDEVICE=pdfwrite -dPDFSETTINGS=/prepress -sOutputFile="$file" "$oldfile"
done

exit

